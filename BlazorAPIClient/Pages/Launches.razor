@page "/Launches"

<h3>SpaceX Launches</h3>

@if (launches == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Is Tentative</th>
                <th>Mission Name</th>
                <th>Launch Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var launch in launches)
            {
                <tr>
                    <td>@launch.Id</td>
                    <td>@launch.IsTentative</td>
                    <td>@launch.MissionName</td>
                    <td>@launch.LaunchDateLocal.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
